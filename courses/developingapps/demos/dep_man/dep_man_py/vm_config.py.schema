info:
  title: Single VM with Zone and Startup script
  author: Google Inc.
  description: Creates a disk and a vm, and attaches the disk to the vm.

required:
  - zone

properties:
  zone:
    description: Zone to create the resources in.
    type: string
  startup-script:
    description: Startup script contents.
    type: string